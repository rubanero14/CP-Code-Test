        <div class="container-fluid">
            <div class="navbar-header">
                <a href="/" class="brand">CP</a>
            </div>
            <div class="d-md-flex -desktops">
                <a class="nav-link mr-2" href="/Consultants">Consultants</a>
                <a class="nav-link mr-2" href="/Customers">Customers</a>
                <a class="nav-link" href="/DiscretionaryRules">User Permissions</a>
            </div>
        </div>
